<h1>My open chats</h1>

<%# displaying the chatrooms that the current user is part of(when role is either buyer or seller) %>
<% @chatrooms.each do |chatroom| %>
  <%= link_to brick_chatroom_path(chatroom.brick, chatroom) do %>
    <% if chatroom.brick.user == current_user %>
      <p>Chat:<%= chatroom.buyer.username %></p>
    <% else %>
      <p>Chat: <%= chatroom.seller.username %></p>
    <% end %>
    <%= link_to "Close chat", brick_chatroom_path(chatroom.brick, chatroom),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
      class: "btn border" %>
  <% end %>
<% end %>
