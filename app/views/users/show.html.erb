<h1>My Bricks</h1>
<% @bricks.each do |brick| %>
  <%= link_to brick_path(brick) do %>
  <%= brick.name %>
    <br>
  <% end %>
<% end %>
<br>
<h1>My Requests</h1>
<% @buy_requests.each do |buy_request| %>
  <%= link_to brick_path(buy_request.brick) do %>
  <%= buy_request.brick.name %>
  <br>
  <% end %>
<% end %>
<br>
<% @buy_requests.each do |buy_request| %>
  <% if buy_request.status == "pending" %>
    <%= button_to "Accept", accept_brick_buy_request_path(buy_request.brick, buy_request), method: :patch, class: "btn border", data: { turbo_confirm: 'Are you sure?' } %>
    <br>
    <%= button_to "Reject", reject_brick_buy_request_path(buy_request.brick, buy_request), method: :patch, class: "btn border", data: { turbo_confirm: 'Are you sure?' } %>
    <br>
  <% end %>
<% end %>
