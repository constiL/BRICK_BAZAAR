<h1> <%= @brick.name %> </h1>
<ul>
  <li>Description: <%= @brick.description %></li>
  <li>City: <%= @brick.city %></li>
  <li>Address: <%= @brick.address %></li>
  <li>Price: <%= @brick.price %></li>
  <li>Condition: <%= @brick.brick_condition %></li>
  <li>Colour: <%= @brick.colour %></li>
</ul>

<%= link_to "edit this brick", edit_brick_path  %>
<br>
<%= link_to "delete this brick", brick_path(@brick), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<br>
<%= simple_form_for [@brick, @buy_request] do |f| %>
  <%= f.submit "Buy", class: "btn" %>
<% end %>
<br>
<% @brick.buy_requests.each do |buy_request| %>
  <%= link_to "Cancel", buy_request_path(buy_request), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %>
<% end %>
