<h1> Add your brick to the market </h1>


<%= simple_form_for(@brick) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :city %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.input :brick_condition, collection: (1..5) %>
  <%= f.input :colour, collection: %w(red blue yellow green orange grey) %>
  <%= f.submit "Add Brick", class: "btn" %>
<% end %>

